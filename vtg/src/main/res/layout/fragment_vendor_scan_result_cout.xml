<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.global.vtg.appview.home.vendor.VendorScanResultViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_virus">

        <androidx.cardview.widget.CardView
            android:id="@+id/splash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_52sdp"
            android:visibility="visible"
            app:cardCornerRadius="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf=" parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <com.global.vtg.utils.textView.SemiBoldTextView
                    android:id="@+id/tvtest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"

                    android:layout_marginEnd="@dimen/_16sdp"
                    android:gravity="center"

                    android:text="@string/label_test_status"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_17ssp" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_status_splash"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center_horizontal"
                    android:translationZ="10dp"
                    android:visibility="visible"
                  />

                <com.global.vtg.utils.textView.SemiBoldTextView
                    android:id="@+id/tvVacine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:gravity="center"
                    android:text="@string/label_vaccine_status"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_17ssp" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_status_Vaccine"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:layout_gravity="center_horizontal"
                    android:translationZ="10dp"
                    android:visibility="visible"
                 />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"

            >

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/countDown"
                android:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfilePic"
                        android:layout_width="@dimen/profile_pic"
                        android:layout_height="@dimen/profile_pic"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:src="@drawable/user"
                        android:translationZ="10dp"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="@dimen/_4sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivStatus"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="@dimen/_minus24sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:translationZ="10dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/ivProfilePic"
                        app:layout_constraintStart_toEndOf="@+id/ivProfilePic"
                        app:srcCompat="@drawable/ic_edit" />

                    <com.global.vtg.utils.textView.SemiBoldTextView
                        android:id="@+id/tvName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16ssp"
                        app:layout_constraintBottom_toBottomOf="@+id/ivProfilePic"
                        app:layout_constraintEnd_toStartOf="@+id/ivStatus_1"
                        app:layout_constraintStart_toEndOf="@+id/ivProfilePic"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivStatus_1"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginTop="@dimen/_18sdp"

                        android:layout_marginEnd="@dimen/_16sdp"
                        android:translationZ="10dp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@+id/ivProfilePic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_tick_dose" />

                    <LinearLayout
                        android:id="@+id/infoRoot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintTop_toBottomOf="@+id/ivProfilePic">

                        <com.global.vtg.utils.textView.RegularTextView
                            android:id="@+id/tvId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints" />

                        <com.global.vtg.utils.textView.RegularTextView
                            android:id="@+id/tvDl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/infoRoot_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintTop_toBottomOf="@+id/infoRoot">

                        <com.global.vtg.utils.textView.RegularTextView
                            android:id="@+id/tvDob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                        <com.global.vtg.utils.textView.RegularTextView
                            android:id="@+id/tvStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/label_dob"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view_1"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"

                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@drawable/ic_line"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/infoRoot_1" />

                    <RelativeLayout
                        android:id="@+id/vaccine_Root"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/_16sdp"

                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintTop_toBottomOf="@+id/view_1">

                        <com.global.vtg.utils.textView.BoldTextView
                            android:id="@+id/tvVaccineDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:text="@string/vaccination_details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivIndecator"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/tvVaccineDetails"

                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:srcCompat="@drawable/ic_tick_dose" />


                        <RelativeLayout
                            android:id="@+id/vaccine_Root_sub"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvVaccineDetails"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toEndOf="@+id/ivIndecator">

                            <com.global.vtg.utils.textView.RegularTextView
                                android:id="@+id/tvDose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginStart="@dimen/_8sdp"
                                android:text="@string/label_dose"
                                android:textColor="@color/green"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold" />

                            <com.global.vtg.utils.textView.RegularTextView
                                android:id="@+id/tvVaccine"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/tvDose"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold"
                                tools:ignore="UnknownId" />
                        </RelativeLayout>

                        <com.global.vtg.utils.textView.RegularTextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/vaccine_Root_sub"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_toEndOf="@+id/ivIndecator"
                            android:includeFontPadding="false"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_11ssp" />


                    </RelativeLayout>

                    <View
                        android:id="@+id/view_2"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"

                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@drawable/ic_line"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/vaccine_Root" />

                    <RelativeLayout
                        android:id="@+id/test_Root"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/_16sdp"

                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintTop_toBottomOf="@+id/view_2">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/addedBy"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:tint="@color/colorPrimary"
                            app:srcCompat="@drawable/ic_edit" />

                        <com.global.vtg.utils.textView.BoldTextView
                            android:id="@+id/tvtestDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:text="@string/test_details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivIndecator_1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/tvtestDetails"

                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:srcCompat="@drawable/ic_tick_dose" />


                        <RelativeLayout
                            android:id="@+id/test_Root_sub"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvtestDetails"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toEndOf="@+id/ivIndecator_1">

                            <com.global.vtg.utils.textView.RegularTextView
                                android:id="@+id/tvTest"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginStart="@dimen/_8sdp"
                                android:text="@string/label_dose"
                                android:textColor="@color/green"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold" />

                            <com.global.vtg.utils.textView.RegularTextView
                                android:id="@+id/tvType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/tvTest"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold"
                                tools:ignore="UnknownId" />
                        </RelativeLayout>

                        <com.global.vtg.utils.textView.RegularTextView
                            android:id="@+id/date_kit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/test_Root_sub"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_toEndOf="@+id/ivIndecator_1"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp"
                            android:visibility="gone" />

                        <com.global.vtg.utils.textView.RegularTextView
                            android:id="@+id/date_test"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/date_kit"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_toEndOf="@+id/ivIndecator_1"
                            android:includeFontPadding="false"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_11ssp" />


                    </RelativeLayout>

                    <com.global.vtg.utils.textView.RegularTextView
                        android:id="@+id/tvPassportNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvName" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnShowDetails"
                        style="@style/ButtonStyle"
                        android:layout_width="0dp"
                        android:layout_marginStart="@dimen/_24sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_24sdp"
                        android:onClick="@{viewModel::onClick}"
                        android:text="@string/label_show_details"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/infoRoot" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

            <cn.iwgang.countdownview.CountdownView
                android:id="@+id/countDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_10sdp"

                android:visibility="gone"
                app:isHideTimeBackground="false"
                app:isShowDay="true"
                app:isShowHour="true"
                app:isShowMillisecond="false"
                app:isShowMinute="true"
                app:isShowSecond="true"
                app:isShowTimeBgDivisionLine="false"
                app:isSuffixTextBold="true"
                app:isTimeTextBold="true"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:suffixGravity="center"
                app:suffixMillisecond=""
                app:suffixMinute=""
                app:suffixSecond=""
                app:suffixTextColor="@color/colorPrimary"
                app:suffixTextSize="40sp"
                app:timeBgColor="@color/green"
                app:timeBgSize="@dimen/_60sdp"
                app:timeTextColor="@color/white"
                app:timeTextSize="22sp" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>