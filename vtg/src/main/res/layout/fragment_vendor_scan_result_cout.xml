        <com.global.vtg.utils.textView.SemiBoldTextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_32sdp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <com.global.vtg.utils.textView.BoldTextView
            android:id="@+id/tvPassportNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivStatus"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPassportNumber" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnShowDetails"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:onClick="@{viewModel::onClick}"
            android:text="@string/label_show_details"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivStatus" />

        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/countDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_20sdp"
            android:paddingBottom="@dimen/_20sdp"
            app:isHideTimeBackground="false"
            app:isShowDay="true"
            android:visibility="gone"
            app:isShowHour="true"
            app:isShowMillisecond="false"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:isShowTimeBgDivisionLine="false"
            app:isSuffixTextBold="true"
            app:isTimeTextBold="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:suffixGravity="center"
            app:suffixMillisecond=""
            app:suffixMinute=""
            app:suffixSecond=""
            app:suffixTextColor="@color/colorPrimary"
            app:suffixTextSize="40sp"
            app:timeBgColor="@color/green"
            app:timeBgSize="@dimen/_60sdp"
            app:timeTextColor="@color/white"
            app:timeTextSize="22sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
